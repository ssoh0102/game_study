#include <stdio.h>

int main() {
    int left = 10;   // 사각형의 왼쪽 X 좌표
    int top = 5;     // 사각형의 위쪽 Y 좌표
    int width = 20;  // 사각형의 너비
    int height = 10; // 사각형의 높이

    // 윗변 그리기
    for (int x = 0; x < width; x++) {
        printf("\033[%d;%dH-", top, left + x);
    }

    // 아랫변 그리기
    for (int x = 0; x < width; x++) {
        printf("\033[%d;%dH-", top + height - 1, left + x);
    }

    // 왼쪽변 그리기
    for (int y = 0; y < height; y++) {
        printf("\033[%d;%dH|", top + y, left);
    }

    // 오른쪽변 그리기
    for (int y = 0; y < height; y++) {
        printf("\033[%d;%dH|", top + y, left + width - 1);
    }

    // 커서 위치를 아래로 이동하여 출력이 끝났음을 명시
    printf("\033[%d;%dH", top + height + 2, 0);

    return 0;
}
